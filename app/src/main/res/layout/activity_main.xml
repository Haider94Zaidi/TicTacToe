<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.haider.tictactoe.MainActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <GridView
            android:id="@+id/gamegrid"
            android:layout_width="match_parent"
            android:layout_height="600px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/played"
            android:layout_marginTop="30dp"
            android:columnWidth="100dp"
            android:gravity="center"
            android:horizontalSpacing="10dp"
            android:numColumns="auto_fit"
            android:stretchMode="columnWidth"
            android:verticalSpacing="10dp" />


        <Button
            android:id="@+id/restartgame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/name"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/name"
            android:layout_marginBottom="13dp"
            android:text="Restart" />


        <TextView
            android:id="@+id/played"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Games played : "
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/p2win"
            android:layout_toStartOf="@+id/p2win" />

        <TextView
            android:id="@+id/gamenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/played"
            android:layout_alignBottom="@+id/played"
            android:layout_toEndOf="@+id/played"
            android:layout_toRightOf="@+id/played" />

        <TextView
            android:id="@+id/p1nametxt"
            android:layout_width="200px"
            android:layout_height="50px"
            android:layout_above="@+id/restartgame"
            android:layout_alignLeft="@+id/played"
            android:layout_alignStart="@+id/played"
            android:layout_marginBottom="31dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/p1win"
            android:layout_width="70px"
            android:layout_height="50px"
            android:layout_alignBaseline="@+id/p1nametxt"
            android:layout_alignBottom="@+id/p1nametxt"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="19dp"
            android:layout_marginRight="19dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/p2nametxt"
            android:layout_width="200px"
            android:layout_height="50px"
            android:layout_alignLeft="@+id/p1nametxt"
            android:layout_alignStart="@+id/p1nametxt"
            android:layout_alignTop="@+id/restartgame"
            android:layout_marginEnd="19dp"
            android:layout_marginRight="19dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/p2win"
            android:layout_width="70px"
            android:layout_height="50px"
            android:layout_alignBaseline="@+id/p2nametxt"
            android:layout_alignBottom="@+id/p2nametxt"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="19dp"
            android:layout_marginRight="19dp"
            android:text="TextView" />

        <Button
            android:id="@+id/clear_memory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="C M" />


    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
