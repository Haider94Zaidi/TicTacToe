<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.haider.tictactoe.LevelSelection">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:background="@drawable/ticbackground1"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

    <Button
        android:id="@+id/easy"
        style="@style/Base.Theme.AppCompat.DialogWhenLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="144dp"
        android:background="@drawable/com_facebook_button_send_background"
        android:fontFamily="cursive"
        android:text="Easy"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/com_facebook_button_login_silver_background_color" />

    <Button
        android:id="@+id/medium"
        style="@style/Base.V11.ThemeOverlay.AppCompat.Dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/easy"
        android:layout_marginTop="45dp"
        android:background="@drawable/com_facebook_button_send_background"
        android:fontFamily="cursive"
        android:text="Medium"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/com_facebook_button_login_silver_background_color"
        android:typeface="monospace" />
    <Button
        android:id="@+id/hard"
        style="@style/Base.V11.ThemeOverlay.AppCompat.Dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/medium"
        android:layout_marginTop="45dp"
        android:background="@drawable/com_facebook_button_send_background"
        android:fontFamily="cursive"
        android:text="Hard"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/com_facebook_button_login_silver_background_color"
        android:typeface="monospace" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
