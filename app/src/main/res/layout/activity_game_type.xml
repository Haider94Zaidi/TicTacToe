<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.haider.tictactoe.GameType">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:background="@drawable/ticbackground1"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/singleplayerbtn"
            style="@style/Base.Theme.AppCompat.DialogWhenLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="184dp"
            android:background="@drawable/com_facebook_button_send_background"
            android:fontFamily="cursive"
            android:text="Single Player"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/com_facebook_button_login_silver_background_color" />

        <Button
            android:id="@+id/multiplayerbtn"
            style="@style/Base.V11.ThemeOverlay.AppCompat.Dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/singleplayerbtn"
            android:layout_marginTop="45dp"
            android:background="@drawable/com_facebook_button_send_background"
            android:fontFamily="cursive"
            android:text="Multi Players"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/com_facebook_button_login_silver_background_color"
            android:typeface="monospace" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
